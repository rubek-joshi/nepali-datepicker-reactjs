{
	"compilerOptions": {
		"target": "ESNext",
		"jsx": "react-jsx",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
